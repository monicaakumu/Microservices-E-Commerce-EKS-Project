pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout Source Code') {
            steps {
                // Ensure checkout happens at the root of the workspace
                git branch: 'main', url: 'https://github.com/monicaakumu/Microservices-E-Commerce-EKS-Project.git'
            }
        }
        stage('Docker Image Build') {
            steps {
                script {
                    // Navigate to the correct directory containing the Dockerfile
                    dir('src/cartservice/src') { 
                        // It's generally better to use a dedicated build agent or cleanup tools 
                        // rather than `docker system prune` in a shared environment, but kept for function.
                        sh 'docker container prune -f' 
                        sh 'docker build -t cartservice .'
                    }
                }
            }
        }
        stage('ECR Image Push') { // Corrected stage name
            steps {
                script {
                    sh '''
                    # Retrieve an authentication token and authenticate your Docker client.
                    # This requires the Jenkins agent to have AWS CLI installed and configured permissions.
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 481665089446.dkr.ecr.us-east-1.amazonaws.com

                    # Tag the image with the unique Jenkins BUILD_NUMBER
                    docker tag cartservice:latest 481665089446.dkr.ecr.us-east-1.amazonaws.com/cartservice:${BUILD_NUMBER}

                    # Push the tagged image to ECR
                    docker push 481665089446.dkr.ecr.us-east-1.amazonaws.com/cartservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Git Deployment File') {
            environment {
                // Define environment variables for clean configuration
                GIT_REPO_NAME = "Microservices-E-Commerce-EKS-Project"
                GIT_EMAIL = "moni.akumu@gmail.com"
                GIT_USER_NAME = "monicaakumu"
                IMAGE_NAME = "cartservice"
                REPO_URL = "481665089446.dkr.ecr.us-east-1.amazonaws.com/cartservice"
                YAML_FILE = "cartservice.yaml"
            }
            steps {
                // Navigate to the directory containing the Kubernetes YAML files
                dir('kubernetes-files') { 
                    // Use withCredentials to securely inject the Git PAT
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                        # Configure git user/email for the commit
                        git config user.email "${GIT_EMAIL}"
                        git config user.name "${GIT_USER_NAME}"
                        
                        # Display the build number for logging
                        echo "New Image Tag: ${REPO_URL}:${BUILD_NUMBER}"

                        # Update the image tag in the YAML file
                        sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}

                        # Stage the modified file
                        git add ${YAML_FILE}

                        # Commit the change. Use '|| true' to IGNORE EXIT CODE 1 
                        # if the file content was already correct and no changes were detected.
                        git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}" || true

                        # Push the commit to the main branch using the secure token
                        git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                        '''
                    }
                }
            }
        }
    }
}
